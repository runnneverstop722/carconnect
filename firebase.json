{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "backend/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
    // "headers": [
    //   {
    //     "source": "**/*.tsx",
    //     "headers": [
    //       {
    //         "key": "Content-Type",
    //         "value": "application/javascript"
    //       }
    //     ]
    //   }
    // ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        ".runtimeconfig.json"
      ],
      "runtime": "nodejs20"
    }
  ]
}